extends /site/docs/extends/layout
block variables
	- var title = 'Unit Test - Form';
block intro
	+docs-intro('Form', 'Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eos ipsa repellat quia totam ab doloribus!')
block content
	+e.group
		+docs-group-title('Block Form')
		+b.FORM.form._block
			+e.content
				+e.row
					+e.INPUT.control(name="vname" type="text" placeholder="Name")
				+e.row
					+e.INPUT.control(name="vemail" type="email" placeholder="E-mail")
				+e.row
					+e.INPUT.control(name="vphone" type="phone" placeholder="Phone")
				+e.row
					+e.BUTTON.submit.vbtn._color-brand-1(type="submit") Submit
	+e.group
		+docs-group-title('Line Form')
		+b.FORM.form._line
			+e.content
				+e.row
					+e.INPUT.control(name="vname" type="text" placeholder="Name")
				+e.row
					+e.INPUT.control(name="vemail" type="email" placeholder="E-mail")
				+e.row
					+e.INPUT.control(name="vphone" type="phone" placeholder="Phone")
				+e.row
					+e.BUTTON.submit.vbtn._color-brand-1(type="submit") Submit