										+e.A.sidebar-list-item-link(href="/docs/components/modal.html") Modal
									+e.LI.sidebar-list-item
										+e.A.sidebar-list-item-link(href="/docs/components/title.html") Title
									+e.LI.sidebar-list-item
										+e.A.sidebar-list-item-link(href="/docs/components/form.html") Form
									+e.LI.sidebar-list-item
										+e.A.sidebar-list-item-link(href="/docs/components/collapse.html") Collapse
			block footer