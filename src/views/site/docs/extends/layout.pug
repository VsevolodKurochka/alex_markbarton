	body
		block nav
		.site#page
			block header
			.site-content#content
				+b.SECTION.docs
					+e.intro
						.v-container
							block intro
					block special
					.v-container
						.v-row
							+e.content.col-12.col-sm-8
								block content
							+e.sidebar.col-12.col-sm-4
								+e.P.sidebar-title Available elements
								+e.UL.sidebar-list
									+e.LI.sidebar-list-item
										+e.A.sidebar-list-item-link(href="/docs/components/button.html") Buttons
